<div class="felt-background">
  <div class="container">
    <header>
      <h1>The Game of War</h1>

      <div id="name-section-user">
        <h3>User 1</h3>
        <h3><%= @game.user_name %></h3>
        <h3>Cards left:
          <%= @game.user_1_cards_left %></h3>
      </div>

      <div id="name-section-computer">
        <h3>User 2</h3>
        <h3>Computer</h3>
        <h3>Cards left:
          <%= @game.user_2_cards_left %></h3>
      </div>

    </header>

    <section id="card-area">
      <div class="card" id="card-1"></div>
      <div class="card" id="card-2"></div>
      <div class="card" id="card-3"></div>
      <div class="card" id="card-4"></div>
    </section>

    <%= link_to 'DEAL', '#', class: 'deal-button' %>

  </div>

  <!-- ./container -->
</div>
<!-- ./felt-background -->
