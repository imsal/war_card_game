.felt-background {
  font-family: 'Arial';
  width: 100vw;
  height: 100vh;
  color: white;
  background-image: url('<%= asset_url "backgrounds/green_felt.jpg"%>');
  overflow: hidden;

  .container {
    // width: 968px;
    width: 1200px;
    margin: auto;

    header {

      h1 {
        text-align: center;
        margin: 0;
        padding: 25px;
      }

      #name-section-user {
        float: left;
        margin-left: 150px;
      }

      #name-section-computer {
        float: right;
        margin-right: 150px;
      }

      #notice-bar {
        clear: both;
        width: 100%;
        height: 50px;

        #notice {
          text-align: center;
          font-weight: bold;
        }
      }

    } // .header

    #card-area {
      margin-top: 10px;
      width: 100%;
      text-align: center;

      .card {
        display: inline-block;
        border: 1px solid black;
        width: 20%;
        margin: 2%;
        height: 350px;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        border-radius: 10px;
      }

    } // #card-area

    .deal-button {
      display: block;
      width: 60%;
      color: black;
      text-decoration: none;
      text-align: center;
      margin: 75px auto 0 auto;
      background-color: white;
      border: 2px solid black;
      padding: 8px;
      border-radius: 15px;
    }

    .deal-button:hover {
      color: white;
      background-color: black;
    }

  } // .container
} // .felt-background
